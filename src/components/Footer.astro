        </div>
        <!-- set:html example -->
        <!-- <div
          id='footer-message'
          class='flex md:flex-row mx-auto text-center justify-center footer-text-b'
          set:html={`~ Have a great ${days[new Date().getDay()]} ~`}
        >
        </div> -->
        <!-- innerHtml example -->
        <div
          id='footer-message'
          class='flex md:flex-row mx-auto text-center justify-center footer-text-b'
        >
        </div>
      </div>
    </div>
  </div>
</footer>
<script define:vars={{ days }}>
  function getCurrentDay() {
    const today = new Date();
    const day = today.getDay();
    return days[day];
  }
  const day = getCurrentDay();
  const footerMessage = document.getElementById('footer-message');
  footerMessage.innerText = `~ Have a great ${day} ~`;
</script>
