---
import Layout from '../components/layouts/Layout.astro';
---

<Layout>
  <h1 class='flex flex-row items-center justify-start'>
    <span id='typed'></span>
    <span class='not-prose ml-4 animate-waving-hand w-[48px] h-[48px]'>
      <img
        src='/waving-hand.webp'
        alt='waving hand'
        class='w-full h-full'
        srcset='
          /waving-hand.webp 1x,
          /waving-hand.webp 2x
        '
      />
    </span>
  </h1>
  <h1 class='mb-[-48px] lg:mb-[-48px]'>My name is Aleksa</h1>
  <h2>
    I design and build{' '}
    <span class='highlight-heading'>things for the web.</span>
  </h2>
  <div class='text-xl font-semibold'>
    Computer Science Student and Web Developer.
  </div>
</Layout>
<script>
  // @ts-ignore
  import Typewriter from 'typewriter-effect/dist/core';
  document.addEventListener('DOMContentLoaded', () => {
    const typed = document.getElementById('typed');
    const tw = new Typewriter(typed, {
      loop: false,
      autoStart: true
    });
    tw.typeString('Hello World').start();
  });
</script>
